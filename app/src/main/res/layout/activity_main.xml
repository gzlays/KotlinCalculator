<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/bolme"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="16dp"
        android:onClick="bol"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/cikarma"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="83dp"
        android:onClick="cÄ±kar"
        android:text="-"
        app:layout_constraintEnd_toStartOf="@+id/carpma"
        app:layout_constraintStart_toEndOf="@+id/toplama"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/carpma"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="60dp"
        android:onClick="carp"
        android:text="*"
        app:layout_constraintEnd_toStartOf="@+id/bolme"
        app:layout_constraintStart_toEndOf="@+id/cikarma"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/toplama"
        android:layout_width="73dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="83dp"
        android:onClick="topla"
        android:text="+"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="enter number 1"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:hint="enter number 2"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText1" />

    <TextView
        android:id="@+id/sonuc"
        android:layout_width="171dp"
        android:layout_height="57dp"
        android:layout_marginTop="170dp"
        android:layout_marginBottom="200dp"
        android:onClick="sonucc"
        android:text="result:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3E9F29"
        android:onClick="clear"
        android:text="Clear"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sonuc" />

</androidx.constraintlayout.widget.ConstraintLayout>